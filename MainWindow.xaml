<Window x:Class="d8_wpf_tasks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:d8_wpf_tasks"
        mc:Ignorable="d"
                Title="D8 Tasks Test" Height="300" Width="280">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,5,0,0"
                   TextWrapping="Wrap" Text="main task" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="100,5,0,0"
                   TextWrapping="Wrap" Text="task 1" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="190,5,0,0"
                   TextWrapping="Wrap" Text="task 2" VerticalAlignment="Top"/>
        <TextBlock x:Name="mainout"
                   HorizontalAlignment="Left" Margin="10,25,0,0"
                   Width="80" Height="200"
                   TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="out1"
                   HorizontalAlignment="Left" Margin="100,25,0,0"
                   Width="80" Height="200"
                   TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="out2"
                   HorizontalAlignment="Left" Margin="190,25,0,0"
                   Width="80" Height="200"
                   TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Quit" HorizontalAlignment="Left" Width="40" 
                Margin="116,235,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
